<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/dark_orange</item>
        <item name="colorAccent">@color/orange</item>

        <item name="colorControlNormal">@color/orange</item>
        <item name="colorControlActivated">@color/orange</item>
        <item name="colorControlHighlight">@color/orange</item>

        <item name="android:navigationBarColor">@color/dark_orange</item>
    </style>

    <style name="MainTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/blue</item>
        <item name="android:colorBackground">@color/grey</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <item name="colorControlNormal">@color/orange</item>
        <item name="colorControlActivated">@color/orange</item>
        <item name="colorControlHighlight">@color/orange</item>

        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
    </style>

    <style name="ResponseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="colorAccent">@color/orange</item>
        <item name="android:colorBackground">@color/blue</item>

        <item name="colorControlNormal">@color/orange</item>
        <item name="colorControlActivated">@color/orange</item>
        <item name="colorControlHighlight">@color/orange</item>

        <item name="android:navigationBarColor">@color/green</item>
    </style>

    <style name="SettingsTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/blue</item>
        <item name="android:colorBackground">@color/grey</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <item name="colorControlNormal">@color/blue</item>
        <item name="colorControlActivated">@color/blue</item>
        <item name="colorControlHighlight">@color/blue</item>

        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

    <style name="MediaTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="android:colorBackground">@android:color/black</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/black</item>

        <item name="colorControlNormal">@color/dark_blue</item>
        <item name="colorControlActivated">@color/dark_blue</item>
        <item name="colorControlHighlight">@color/dark_blue</item>
    </style>

    <style name="Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Button.Orange">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_orange</item>
    </style>

    <style name="Button.Red">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_red</item>
    </style>

    <style name="Button.Blue">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_blue</item>
    </style>

    <style name="Button.Green">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/green</item>
    </style>

    <style name="Button.Facebook">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_facebook</item>
        <item name="android:drawableStart">@drawable/ic_facebook</item>
    </style>

    <style name="Button.Transparent">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_transparent</item>
    </style>

    <style name="Button.Transparent.Reverse">
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="Text">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.Title" parent="@style/TextAppearance.AppCompat.Display1">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.Caption" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="Text.Toolbar" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Normal" parent="@style/TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.Secondary" parent="@style/TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/semi_black</item>
    </style>

    <style name="Input" parent="@style/TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Input.Search">
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@drawable/background_search</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableStart">@drawable/ic_filter</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:imeOptions">actionSearch</item>
    </style>


</resources>
