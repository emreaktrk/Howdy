<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cell_weekly_top_user_photo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="16dp"
    />

    <android.support.v7.widget.AppCompatTextView
            android:id="@+id/cell_weekly_top_award"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="asdasdasdasdasdadasdas"
            android:gravity="center_vertical"
            android:scaleType="fitCenter"
            android:layout_alignTop="@+id/cell_weekly_top_user_photo"
            android:layout_alignBottom="@+id/cell_weekly_top_user_photo"
            android:layout_toStartOf="@+id/cell_weekly_top_user_award_photo"
            android:layout_marginEnd="8dp"
    />

    <android.support.v7.widget.AppCompatImageView
            android:id="@+id/cell_weekly_top_user_award_photo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/cell_weekly_top_user_photo"
            android:layout_alignBottom="@+id/cell_weekly_top_user_photo"
            android:layout_marginEnd="16dp"
            android:scaleType="fitCenter"
    />

</RelativeLayout>