<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="16dp"
        tools:context=".ui.main.MainActivity">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/comment_avatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="16dp"
        android:clickable="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars"/>
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/comment_username"
        style="@style/Text.Normal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toStartOf="@id/comment_date"
        app:layout_constraintStart_toEndOf="@id/comment_avatar"
        app:layout_constraintTop_toTopOf="@id/comment_avatar"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="@tools:sample/lorem"/>

    <android.support.v7.widget.AppCompatTextView
            android:id="@+id/comment_text"
            style="@style/Text.Normal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@id/comment_date"
            app:layout_constraintStart_toEndOf="@id/comment_avatar"
            app:layout_constraintTop_toBottomOf="@+id/comment_username"
            android:layout_marginTop="8dp"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="@tools:sample/lorem"/>

    <android.support.v7.widget.AppCompatTextView
            android:id="@+id/comment_date"
            style="@style/Text.Normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="8dp"
            android:textColor="@color/rock"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/comment_avatar"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="@tools:sample/date/ddmmyy"/>
</android.support.constraint.ConstraintLayout>