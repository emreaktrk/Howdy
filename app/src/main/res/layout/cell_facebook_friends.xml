<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="16dp">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/facebook_friends_picture"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:scaleType="centerCrop"
        tools:src="@tools:sample/avatars" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/facebook_friends_username"
        style="@style/Text.Normal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toStartOf="@id/facebook_friends_follow"
        app:layout_constraintStart_toEndOf="@id/facebook_friends_picture"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@tools:sample/first_names" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/facebook_friends_fullname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/facebook_friends_follow"
        app:layout_constraintStart_toEndOf="@id/facebook_friends_picture"
        tools:text="@tools:sample/full_names" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/facebook_friends_follow"
        style="@style/Button.Blue"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:text="Takip Et"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>