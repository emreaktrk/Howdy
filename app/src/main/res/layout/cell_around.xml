<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".ui.around.AroundActivity">

    <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatTextView
                android:id="@+id/around_title"
                style="@style/Text.Normal"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                tools:text="Çevrende 5 kişi acı içinde hissediyor"/>

        <android.support.v7.widget.AppCompatTextView
                android:id="@+id/around_more"
                style="@style/Text.Normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginEnd="16dp"
                android:text="Daha Fazla"/>
    </android.support.v7.widget.LinearLayoutCompat>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"/>

    <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/around_container"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:gravity="center">

        <istanbul.codify.muudy.view.AvatarView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

        <istanbul.codify.muudy.view.AvatarView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

        <istanbul.codify.muudy.view.AvatarView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

        <istanbul.codify.muudy.view.AvatarView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

        <istanbul.codify.muudy.view.AvatarView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
    </android.support.v7.widget.LinearLayoutCompat>
</android.support.v7.widget.LinearLayoutCompat>