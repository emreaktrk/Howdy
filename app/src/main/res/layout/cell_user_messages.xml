<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        tools:context=".ui.main.MainActivity">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_messages_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars"/>

    <android.support.v7.widget.AppCompatTextView
            android:id="@+id/user_messages_username"
            style="@style/Text.Normal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toTopOf="@id/user_messages_last"
            app:layout_constraintEnd_toStartOf="@id/user_messages_date"
            app:layout_constraintStart_toEndOf="@id/user_messages_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="@sample/user.json/data/username"/>

    <android.support.v7.widget.AppCompatTextView
            android:id="@+id/user_messages_date"
            style="@style/Text.Normal"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="8dp"
            android:textColor="@color/rock"
            app:layout_constraintBottom_toTopOf="@id/user_messages_last"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            tools:visibility="visible"
            tools:text="@tools:sample/date/ddmmyy"/>

    <android.support.v7.widget.AppCompatTextView
            android:id="@+id/user_messages_last"
            style="@style/Text.Normal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="8dp"
            android:textColor="@color/rock"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/user_messages_image"
            app:layout_constraintTop_toBottomOf="@id/user_messages_username"
            tools:text="@tools:sample/lorem"/>
</android.support.constraint.ConstraintLayout>